<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    android:background="@drawable/background_style"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:text="1"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:gravity="start"
        android:layout_marginStart="10dp"
        android:id="@+id/itemUserId"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemUserId"
        android:textSize="23sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Dominic"
        android:id="@+id/itemUserName"
        android:layout_marginStart="10dp"
        android:gravity="start"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="cursive"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/itemUserSurname"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="start"
        android:text="Azimov"
        android:fontFamily="cursive"
        android:textSize="23sp"
        app:layout_constraintTop_toBottomOf="@id/itemUserName"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:src="@drawable/baseline_edit_24"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        android:id="@+id/itemEdtUserData"
        android:layout_width="34dp"
        android:layout_height="34dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>